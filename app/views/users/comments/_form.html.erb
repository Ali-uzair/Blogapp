<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <% if !parent.nil?%>
    <input type="hidden" name="comment[parent_id]" value="<%=parent.id%>">
  <%end%>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.file_field :cover_picture, accept: 'image/png,image/gif,image/jpeg'%>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
